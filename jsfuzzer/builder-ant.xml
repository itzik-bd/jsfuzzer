<?xml version="1.0" encoding="UTF-8"?>
<project name="JsFuzzer" default="makejar" basedir=".">
  <target name ="makejar" description="Create a jar for jsfuzzer project">
    <jar jarfile="dist/jsfuzzer.jar">
    	<fileset dir="bin" />
    	<fileset dir="." includes="lib/**" />
    	<fileset dir="." includes="resources/**" />
	    <manifest>
		    <attribute name="Rsrc-Class-Path" value="lib/commons-lang3-3.4.jar lib/json-simple-1.1.1.jar"/>
		    <attribute name="Main-Class" value="il.ac.tau.jsfuzzer.Main.JsFuzzer"/>
	    </manifest>
    </jar>
  </target>
</project>